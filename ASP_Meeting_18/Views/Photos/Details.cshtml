@model ASP_Meeting_18.Data.Photo

@{
    ViewData["Title"] = "Details";
}
@section Styles{
    <style>
        img{
            width: 200px;
            object-fit: cover;
        }
    </style>
}

<h1>Details</h1>

<div>
    <h4>Photo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Filename)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Filename)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhotoUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhotoUrl)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product!.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product!.Photos)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.Product!.Photos!.FirstOrDefault()!.PhotoUrl" alt="@Model.Product.Photos!.FirstOrDefault()!.Filename"/>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
    <a asp-action="Index" class="btn btn-sm btn-outline-primary">Back to List</a>
</div>
